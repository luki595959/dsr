<%- include('../partials/header.ejs')%>
    <header class="jumbotron">
        <div class="container">
            <h1>New Wage</h1>
            <p>Create New Wage</p>
        </div>
    </header>
    <div class="col-md-12">
        <div class="col-md-4"></div>
        <div class="col-md-4" style=" margin: 25px auto; ">
            <form action="/economy/wage" method="post">
                <div class="form-group">
                    <label for="a">Employee </label>
                    <select class="form-control" name="employee" id="a">
                        <option></option>
                        <%employees.forEach(function(employee){%>
                            <option value="<%=employee.username%>">
                                <%=employee.username%>
                            </option>

                            <%})%>
                    </select>
                </div>
                <div class="form-group">
                    <label for="b">Wage </label>
                    <input class="form-control" id="b" type="text" name="wage" placeholder="Wage">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" value="Submit">
                </div>
            </form>
            <a href="/economy/wage">Go Back</a>
        </div>
    </div>
    <%- include('../partials/footer.ejs')%>